<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Login Window" Height="200" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Right" Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,30,0">
            <Button x:Name="DoctorLoginButton" Content="Doctor Login" Width="100" Click="DoctorLoginButton_Click" Height="30" Margin="0,5,0,5"/>
            <Button x:Name="AssistantLoginButton" Content="Assistant Login" Width="100" Click="AssistantLoginButton_Click" Height="30" Margin="0,5,0,5"/>
            <Button x:Name="AddingDoctorButton" Content="Register a doctor" Width="100" Click="AddingDoctorButton_Click" Height="30" Margin="0,5,0,5"/>
        </StackPanel>
        <Image HorizontalAlignment="Left" Height="75" Margin="30,0,0,0" VerticalAlignment="Center" Width="100" Source="/mk.png"/>
    </Grid>
</Window>
